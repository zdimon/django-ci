server { 
    listen 80;
    server_name zdimon-1.local;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
        proxy_pass http://localhost:8080;
    }

    location /media {
        autoindex on;
        alias /home/zdimon/Desktop/work/pressa-besa/media/;
    }

   
}